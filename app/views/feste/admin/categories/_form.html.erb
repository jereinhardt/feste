<%= form_for category do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <h5>Select the emails that belong to this category.</h5>
  <%= f.fields_for :mailers do |mailers_form| %>
    <% @mailers.each do |mailer| %>
      <div class="form-check">
        <label class="form-check-label">
          <%= mailers_form.check_box nil, { class: "form-check-input", checked: category.mailers.include?(mailer) }, mailer, nil %> <%= mailer %>         
        </label>
      </div>
    <% end %>
  <% end %>
  <div class="mt-3">
    <%= f.submit "Submit", class: "btn btn-success" %>    
  </div>
<% end %>