<% if @categories.none? %>
  <div class="jubotron text-center">
    <h4 class="display-4">Looks like you don't have any categories yet</h4>
    <p class="lead">Categories allow you to sort emails into groups that your users can subscribe to.</p>
    <%= link_to "Create a Category", new_category_path, class: "btn btn-primary btn-lg" %>
  </div>
<% else %>
  <div class="row">
    <div class="col-7">
      <h4>Categories</h4>
    </div>
    <div class="col-5 text-right">
      <%= link_to "Create a Category", new_category_path, class: "btn btn-primary" %>
    </div>
  </div>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="col">Name</th>
        <th class="col">Size</th>
        <th class="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.mailers.count %></td>
          <td>
            <%= link_to "Edit", edit_category_path(category), class: "btn btn-warning" %>
            <%= link_to "Delete", category_path(category), class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this category?" }, method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>